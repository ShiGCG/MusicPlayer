<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="5dp"
    android:background="#FAFAFA">

    <TextView
        android:id="@+id/tx_result_list_item_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLength="20"
        android:maxLines="2"
        android:text="歌曲名"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tx_result_list_item_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="歌手"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/tx_result_list_item_song_name"
        app:layout_constraintTop_toBottomOf="@+id/tx_result_list_item_song_name" />

</androidx.constraintlayout.widget.ConstraintLayout>